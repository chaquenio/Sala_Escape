        <div class="col-md-3 col-12">
            <img class="img-nwa mt-5" src="~/img/cobain4.jpg" alt="">
        </div>
    </div>




    <div class="row">
        <div class="col">
            <h4 class="text-center iniciarjuego__title my-5">¿En que Año murió Kurt Cobain?<span
                    class="iniciarjuego__title--habitacion1"></span></h4>
        </div>
    </div>

    <div class="respuesta1 mt-3 mb-2" id="respuesta1">
        <button class="closeRespuestaButton " id="close1"><i class="bi bi-x-lg"></i></button>
        <p class="text-center">Es alrededor del los 90s</p>
    </div>

