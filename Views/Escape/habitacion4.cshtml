        <div class="col-md-3 col-12">
            <img class="img-nwa mt-5" src="~/img/cobain1.jpg" alt="">
        </div>
        <div class="col-md-3 col-12">
            <img class="img-nwa mt-5" src="~/img/cobain2.jpg" alt="">
        </div>
        <div class="col-md-3 col-12">
